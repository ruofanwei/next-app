{
  "name": "next-app",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "test": "jest",
    "build": "npm run i18n && next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx}' --write",
    "extract:i18n": "formatjs extract '{pages,components,sections}/**/*.{js,ts,tsx}' --format simple --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file content/locales/ja.json",
    "compile:i18n": "formatjs compile-folder --ast --format simple content/locales content/compiled-locales",
    "i18n": "npm run extract:i18n && npm run compile:i18n"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "yarn prettier",
      "eslint"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.12",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@headlessui/react": "^1.4.2",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.4.0",
    "bcrypt": "^5.0.1",
    "card-validator": "^8.1.1",
    "cloudinary": "^1.27.1",
    "compressorjs": "^1.1.1",
    "focus-visible": "^5.2.0",
    "framer-motion": "^4",
    "js-cookie": "^3.0.1",
    "multer": "^1.4.3",
    "next": "12.0.2",
    "next-connect": "^0.11.0",
    "postcss": "^8.3.11",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "quill": "^1.3.7",
    "quill-delta-to-html": "^0.12.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.20.5",
    "react-intl": "^5.23.0",
    "react-loader-spinner": "^4.0.0",
    "react-swipeable": "^6.2.0",
    "react-toastify": "^8.1.0",
    "swr": "^1.0.1",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@chakra-ui/icons": "^1.0.17",
    "@formatjs/cli": "^4.5.0",
    "@hypertheme-editor/chakra-ui": "^0.1.2",
    "@types/jest": "^27.0.3",
    "@types/js-cookie": "^3.0.0",
    "@types/node": "16.11.6",
    "@types/quill": "^2.0.9",
    "@types/react": "17.0.33",
    "@types/tailwindcss": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@xstate/react": "^1.6.3",
    "axios": "^0.24.0",
    "babel-plugin-formatjs": "^10.3.12",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "eslint": "7",
    "eslint-config-next": "12.0.2",
    "eslint-config-prettier": "^8.3.0",
    "firebase": "^9.4.1",
    "firebase-admin": "^10.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "next-auth": "^4.0.1",
    "prettier": "^2.4.1",
